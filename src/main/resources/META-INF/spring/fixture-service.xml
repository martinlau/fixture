<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath:fixture.properties"
                                  system-properties-mode="OVERRIDE"/>

    <bean id="mailService"
          class="io.fixture.service.MailServiceImpl">
        <constructor-arg index="0"
                         name="mailSender"
                         ref="mailSender"/>
        <constructor-arg index="1"
                         name="messageSource"
                         ref="messageSource"/>
        <constructor-arg index="2"
                         name="velocityEngine"
                         ref="velocityEngine"/>
    </bean>

    <bean id="registrationService"
          class="io.fixture.service.RegistrationServiceImpl">
        <constructor-arg index="0"
                         name="mailService"
                         ref="mailService"/>
        <constructor-arg index="1"
                         name="messageSource"
                         ref="messageSource"/>
        <constructor-arg index="2"
                         name="passwordEncoder"
                         ref="passwordEncoder"/>
        <constructor-arg index="3"
                         name="userProfileRepository"
                         ref="userProfileRepository"/>
        <constructor-arg index="4"
                         name="userRepository"
                         ref="userRepository"/>
    </bean>

    <bean id="velocityEngine"
          class="org.springframework.ui.velocity.VelocityEngineFactoryBean"
          p:resourceLoaderPath="classpath:/META-INF/velocity/"
          p:preferFileSystemAccess="false"/>

    <bean id="mailSender"
          class="org.springframework.mail.javamail.JavaMailSenderImpl"
          p:host="${fixture.service.smtp.host}"
          p:port="${fixture.service.smtp.port}"
          p:username="${fixture.service.smtp.username}"
          p:password="${fixture.service.smtp.password}"/>

</beans>
